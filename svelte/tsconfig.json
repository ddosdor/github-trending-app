{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true
  },
  "paths": {
    "@/*": [
      "src/*"
    ],
  },
  "include": [
    "*.ts",
    "*.cjs",
    "*.js",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
  "exclude": [
    "tailwind.config.cjs",
    "svelte.config.js"
  ]

}
